{% if config.website %}
[website]
type={{ config.website.type }}
inline_static_files_directory={{ config.website.inline_static_files_directory }}
external_static_files_directory={{ config.website.external_static_files_directory }}
reloads_module={{ config.website.reloads_module }}
recalculates_static_file_hash={{ config.website.recalculates_static_file_hash }}
clears_template_cache={{ config.website.clears_template_cache }}
prevents_xsrf={{ config.website.prevents_xsrf }}
master_template_directory={{ config.website.master_template_directory }}
{% endif %}
{% if config.http %}
[http]
host={{ config.http.host }}
port={{ config.http.port }}
processes_count={{ config.http.processes_count }}
{% endif %}
{% if config.security %}
[security]
hash_salt={{ config.security.hash_salt }}
{% endif %}
{% if config.sendgrid %}
[sendgrid]
url={{ config.sendgrid.url }}
{% endif %}
{% if config.smtp %}
[smtp]
host={{ config.smtp.host }}
port={{ config.smtp.port }}
uses_tls={{ config.smtp.uses_tls }}
user={{ config.smtp.user }}
password={{ config.smtp.password }}
{% endif %}
{% for config_name, database in config.items() if config_name.endswith('database') %}
[{{ config_name }}]
type={{ database.type }}
host={{ database.host }}
port={{ database.port }}
database={{ database.database }}
user={{ database.user }}
password={{ database.password }}
{% endfor %}
{% for config_name, redis in config.items() if config_name.endswith('redis') %}
[{{ config_name }}]
host={{ redis.host }}
port={{ redis.port }}
password={{ redis.password }}
{% endfor %}
{% if config.queue %}
[queue]
type={{ config.queue.type }}
host={{ config.queue.host }}
port={{ config.queue.port }}
password={{ config.queue.password }}
worker_interval = {{ config.queue.worker_interval }}
{% endif %}
{% if config.file_storage %}
[file_storage]
type={{ config.file_storage.type }}
base_directory={{ config.file_storage.base_directory }}
{% endif %}
{% if config.logging %}
[logging]
level={{ config.logging.level }}
{% endif %}
