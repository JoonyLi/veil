if [ -z `readlink $0` ] ; then
    BIN_DIR=$(cd `dirname $0` && pwd)
else
    BIN_DIR=$(dirname $(readlink $0))
fi
VEIL_SRC_DIR=$(dirname $BIN_DIR)/src
if [ ! -f /usr/bin/veil ]; then
    sudo ln -s $BIN_DIR/veil /usr/bin/veil
fi
virtualenv env
mkdir $(pwd)/src
touch $(pwd)/src/__veil__.py
echo -e "$VEIL_SRC_DIR\n$(pwd)/src" > env/lib/python2.7/site-packages/veil.pth